<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.IngredientMapper">

    <sql id="Base_Column_List">
        id,name, price
    </sql>

    <select id="selectAll" resultType="com.example.entity.Ingredient">
        select
        <include refid="Base_Column_List" />
        from ingredient
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="name != null"> and name like concat('%', #{name}, '%')</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Ingredient">
        select
        <include refid="Base_Column_List" />
        from ingredient
        where id = #{id}
    </select>

    <select id="selectByName" resultType="com.example.entity.Ingredient">
        select
            <include refid="Base_Column_List" />
        from ingredient
        where name like CONCAT('%', #{name}, '%')

    </select>

    <delete id="deleteById">
        delete from ingredient
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Ingredient" useGeneratedKeys="true" keyProperty="id">
        insert into ingredient
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="name != null">name,</if>
                <if test="price != null">price,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="name != null">#{name},</if>
                <if test="price != null">#{price},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Ingredient">
        update ingredient
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="price != null">
                price = #{price},
            </if>

        </set>
        where id = #{id} 
    </update>

</mapper>