<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.PlanMapper">

    <sql id="Base_Column_List">
        id,userId,weekStartDate
    </sql>

    <select id="selectAll" resultType="com.example.entity.Plan">
        select
        <include refid="Base_Column_List" />
        from plan
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="userId != null"> and userId= #{userId}</if>
            <if test="weekStartDate != null"> and weekStartDate= #{weekStartDate}</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Plan">
        select
        <include refid="Base_Column_List" />
        from plan
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from plan
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Plan" useGeneratedKeys="true">
        insert into plan
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="userId != null">userId,</if>
                <if test="weekStartDate != null">weekStartDate,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="userId != null">#{userId},</if>
                <if test="weekStartDate != null">#{weekStartDate},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Plan">
        update plan
        <set>
            <if test="weekStartDate != null">
                weekStartDate = #{weekStartDate},
            </if>
        </set>
        where id = #{id} 
    </update>

</mapper>